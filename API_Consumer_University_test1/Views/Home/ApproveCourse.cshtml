@model IEnumerable<API_Consumer_University_test1.Models.Courses>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h1>Course Reguests</h1>

<div class="row mb-12 g-6">
    @foreach (var course in Model)
    {
        if (course.isApproved == 0)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card">
                <div class="card-body">
                    <h4>@course.Course_Name.ToUpper()</h4>
                    <div>
                        <hr />
                        <dl class="row">

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => course.Id)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => course.Id)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayName("Teacher")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => course.Teacher.Teacher_Name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayName("Course Hours")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => course.Course_Hours)
                            </dd>

                        </dl>
                    </div>
                    <div class="d-flex gap-2">
                        <form asp-controller="Home" asp-action="ApproveCourse" method="post">
                            <input type="hidden" name="id" value="@course.Id" />
                            <input type="hidden" name="isApproved" value="2" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>

                        <form asp-controller="Home" asp-action="ApproveCourse" method="post">
                            <input type="hidden" name="id" value="@course.Id" />
                            <input type="hidden" name="isApproved" value="1" />
                            <button type="submit" class="btn btn-warning">Ignore</button>
                        </form>  
                    </div>
                </div>
            </div>
        </div>
        }
    }
</div>

