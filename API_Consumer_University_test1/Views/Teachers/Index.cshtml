<div class="row mb-12 g-6">
    @foreach (var teacher in Model)
    {

        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h4>@teacher.Teacher_Name.ToUpper()</h4>
                    <div>
                        <hr />
                        <dl class="row">

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => teacher.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => teacher.Email)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayName("Salary")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => teacher.Salary)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayName("PHD")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => teacher.PHD)
                            </dd>

                        </dl>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="ShowProfileAdmin" asp-route-id="@teacher.Id" class="btn btn-primary">Details</a>
                        <a asp-action="DeleteConfirmed" asp-route-teacherId="@teacher.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

