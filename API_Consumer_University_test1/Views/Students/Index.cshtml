@model IEnumerable<API_Consumer_University_test1.Models.Students>

@{
    ViewData["Title"] = "Index";
}
@if(TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Students Registered</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hours_term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reciept)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hours_term)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reciept)
                </td>
           
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="DeleteConfirmed" asp-route-studentId="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="ShowProfileAdmin" class="btn btn-info" asp-route-id="@item.Id">Profile</a>
                        <a asp-action="EditStudentAdmin" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                    </div>
                </td>
                <td>
                   
                </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="CreateStudent" class="btn btn-primary">Create Student</a>