@model IEnumerable<API_Consumer_University_test1.Models.Students>

@{
    ViewData["Title"] = "Index";
}
@if(TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Students Registered</h1>


<div class="row mb-12 g-6">
    @foreach (var student in Model)
    {

        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h4>@student.Name.ToUpper()</h4>
                    <div>
                        <hr />
                        <dl class="row">

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => student.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => student.Email)
                            </dd>
                            
                            <dt class="col-sm-4">
                                @Html.DisplayName("Major")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => student.Major.Name)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayName("hours/term")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => student.hours_term)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayName("Reciept")
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => student.reciept)
                            </dd>

                        </dl>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="DeleteConfirmed" asp-route-studentId="@student.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="ShowProfileAdmin" class="btn btn-info" asp-route-id="@student.Id">Profile</a>
                        <a asp-action="EditStudentAdmin" class="btn btn-warning" asp-route-id="@student.Id">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="CreateStudent" class="btn btn-primary">Create Student</a>