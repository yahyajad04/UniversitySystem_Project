@model API_Consumer_University_test1.Models.Students
<link rel="stylesheet" href="~/lib/bootswatch/darkly/bootstrap.css" />

@{
    ViewData["Title"] = "RegesteredCourses";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Regestered Courses</h1>

<table class="table">
    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayName("Course Name")
            </th>
            <th>
                @Html.DisplayName("Course Teacher")
            </th>
            <th>
                @Html.DisplayName("Course Hours")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach(var course in Model.courses)
{
<tr>
    <td>
        @Html.DisplayFor(itemCourse => course.Course_Name)
    </td>
    <td>
        @Html.DisplayFor(itemCourse => course.Teacher_Name)
    </td>
    <td>
        @Html.DisplayFor(itemCourse => course.Course_Hours)
    </td>   
    <td>
        <form asp-action="Unroll" method="post">
            <input type="hidden" name="courseId" value="@course.Id" />
            <button type="submit" class="btn btn-primary">Unroll</button>
        </form>
    </td>
</tr>
}

    </tbody>
</table>
