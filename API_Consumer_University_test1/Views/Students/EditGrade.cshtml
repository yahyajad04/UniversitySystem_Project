@model API_Consumer_University_test1.Models.Grades

@{
    ViewData["Title"] = "EditGrade";
}

<h1>EditGrade</h1>

<h4>Grades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGrade" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StudentId" type="hidden" />
            <input asp-for="CourseId" type="hidden" />

            <div class="form-group">
                <label asp-for="first" class="control-label"></label>
                <input asp-for="first" class="form-control" />
                <span asp-validation-for="first" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="second" class="control-label"></label>
                <input asp-for="second" class="form-control" />
                <span asp-validation-for="second" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="final" class="control-label"></label>
                <input asp-for="final" class="form-control" />
                <span asp-validation-for="final" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Teachers" asp-action="StudentsinCourse" asp-route-courseId="@Model.CourseId" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
