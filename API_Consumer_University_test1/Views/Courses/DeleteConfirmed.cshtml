@model API_Consumer_University_test1.Models.Courses

@{
    ViewData["Title"] = "DeleteConfirmed";
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h1>Delete Confirmation</h1>

<div>
    <h4>Courses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Teacher_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Teacher_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course_Hours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course_Hours)
        </dd>
    </dl>
</div>
<div class="d-flex gap-2">
    <form asp-action="DeleteCourse" method="post">
        <input type="hidden" name="courseId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete Confirmed</button>
    </form>
    <a asp-action="Index" class="btn btn-info">Cancel</a>
</div>
